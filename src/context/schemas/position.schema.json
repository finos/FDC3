{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fdc3.finos.org/schemas/next/position.schema.json",
  "type": "object",
  "title": "Position",
  "allOf": [{ "$ref": "context.schema.json#" }],
  "properties": {
    "type": { "const": "fdc3.position" },
    "name": { "type": "string" },
    "instrument": { "$ref": "instrument.schema.json#" },
    "holding": { "type": "number" },
    "trades": {
        "type": "array",
        "items": { "$ref": "trade.schema.json#" }
    },
    "basis": { "$ref": "valuation.schema.json#" },
    "current": { "$ref": "valuation.schema.json#" },
    "gain": { "type": "number" },
    "restricted": { "type": "number" }
  },
  "required": ["instrument","holding"]
}
